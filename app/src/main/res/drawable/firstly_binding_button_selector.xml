<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/light_gray_10"></solid>
            <corners android:radius="30dp"></corners>
            <size android:width="80dp" android:height="40dp"></size>
        </shape>
    </item>
    
    <item>
        <shape>
            <solid android:color="@color/white"></solid>
            <corners android:radius="30dp"></corners>
             <size android:width="80dp" android:height="40dp"></size>
             <stroke android:width="1px" android:color="@color/light_gray_10"></stroke>
        </shape>
    </item>

</selector>
