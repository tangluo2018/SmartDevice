<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/id_group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/icon_scene"/>
    <TextView 
        android:id="@+id/id_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toRightOf="@id/id_group_icon"
        android:paddingLeft="20dp"
        android:text="@string/unknown_str"/>
    
    <TextView 
        android:id="@+id/id_group_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_str"
        android:textColor="@color/light_gray_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:visibility="gone"/>

</RelativeLayout>
