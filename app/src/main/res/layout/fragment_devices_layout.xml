<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_dark_turquoise_bg">
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView 
            android:id="@+id/id_alldevice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/device"
            android:textColor="@color/main_turquoise_bg"
            android:background="@drawable/device_button_selected_shape"/>
        <TextView 
            android:id="@+id/id_devicetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/device_type_button_shape"
            android:text="@string/room"/>
    </LinearLayout>
    </RelativeLayout>    
     <include 
            android:id="@+id/id_device_list_layout"
            layout="@layout/device_list_layout"/>
     <include 
            android:id="@+id/id_device_type_layout"
            android:visibility="gone"
            layout="@layout/room_layout"/>
</LinearLayout>
