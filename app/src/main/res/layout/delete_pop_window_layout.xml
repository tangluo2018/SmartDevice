<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:id="@+id/id_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stone_gray"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_button_selector"
        android:orientation="vertical">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_gray_20"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="@string/sure_delete"/>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_gray"/>
    <TextView 
        android:id="@+id/id_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:text="@string/grobal_delete"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/transparent"/>
    
    <TextView 
        android:id="@+id/id_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/main_turquoise_bg"
        android:background="@drawable/white_button_selector"
        android:text="@string/grobal_cancel"/>
 </LinearLayout>
</RelativeLayout>
