<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="10dp"
    android:orientation="vertical">
    
    <ImageView 
        android:id="@+id/id_message_detail_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_message_warning"
        />
    <TextView 
        android:id="@+id/id_message_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/unknown_str"/>
    
    <TextView 
        android:id="@+id/id_message_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="@string/unknown_str"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView 
        android:id="@+id/id_message_detail_dev_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="@string/message_dev_name"/>
        <TextView 
        android:id="@+id/id_message_detail_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_str"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView 
        android:id="@+id/id_message_detail_dev_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="@string/message_dev_type"/>
        <TextView 
        android:id="@+id/id_message_detail_dev_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_str"/>
    </LinearLayout>
    
    
    <TextView 
        android:id="@+id/id_message_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="@string/unknown_str"/>

</LinearLayout>
